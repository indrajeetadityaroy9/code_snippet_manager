{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "default",
            "displayName": "Default Build",
            "description": "Release build with Ollama support (no llama.cpp)",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DAM_BUILD_TESTS": "ON",
                "DAM_BUILD_CLI": "ON",
                "DAM_ENABLE_LLM": "ON",
                "DAM_ENABLE_LLAMACPP": "OFF",
                "DAM_ENABLE_VECTOR_SEARCH": "ON"
            }
        },
        {
            "name": "minimal",
            "displayName": "Minimal Build",
            "description": "Core functionality only, no LLM features",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DAM_BUILD_TESTS": "OFF",
                "DAM_BUILD_CLI": "ON",
                "DAM_ENABLE_LLM": "OFF"
            }
        },
        {
            "name": "full",
            "displayName": "Full Build",
            "description": "All features including llama.cpp (CPU)",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DAM_BUILD_TESTS": "ON",
                "DAM_BUILD_CLI": "ON",
                "DAM_ENABLE_LLM": "ON",
                "DAM_ENABLE_LLAMACPP": "ON",
                "DAM_ENABLE_VECTOR_SEARCH": "ON"
            }
        },
        {
            "name": "full-gpu-metal",
            "displayName": "Full Build + Metal GPU",
            "description": "All features with Metal GPU acceleration (macOS)",
            "inherits": "full",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "DAM_LLAMACPP_METAL": "ON"
            }
        },
        {
            "name": "full-gpu-cuda",
            "displayName": "Full Build + CUDA GPU",
            "description": "All features with CUDA GPU acceleration (NVIDIA)",
            "inherits": "full",
            "cacheVariables": {
                "DAM_LLAMACPP_CUDA": "ON"
            }
        },
        {
            "name": "full-gpu-vulkan",
            "displayName": "Full Build + Vulkan GPU",
            "description": "All features with Vulkan GPU acceleration",
            "inherits": "full",
            "cacheVariables": {
                "DAM_LLAMACPP_VULKAN": "ON"
            }
        },
        {
            "name": "dev",
            "displayName": "Development Build",
            "description": "Debug build with address sanitizer",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "DAM_BUILD_TESTS": "ON",
                "DAM_BUILD_CLI": "ON",
                "DAM_ENABLE_LLM": "ON",
                "DAM_ENABLE_LLAMACPP": "OFF",
                "DAM_ENABLE_VECTOR_SEARCH": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "jobs": 0
        },
        {
            "name": "minimal",
            "configurePreset": "minimal",
            "jobs": 0
        },
        {
            "name": "full",
            "configurePreset": "full",
            "jobs": 0
        },
        {
            "name": "dev",
            "configurePreset": "dev",
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "dev",
            "configurePreset": "dev",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            }
        }
    ]
}
